<?php $this->plugin('dateFormat')->setTimezone('America/Sao_Paulo')->setlocale('pt_BR'); ?>

<table class="table table-bordered">
    <thead>
    <tr>
        <th><?= $this->translate('Title'); ?></th>
        <th><?= $this->translate('Content'); ?></th>
        <th><?= $this->translate('Creation Date'); ?></th>
        <th><?= $this->translate('Modification Date'); ?></th>
    </tr>
    </thead>
    <tbody>
    <?php foreach ($this->posts as $post) : ?>
        <tr>
            <td><?php echo $post->getTitulo(); ?></td>
            <td><?php echo $post->getConteudo(); ?></td>
            <td>
                <?= $this->dateFormat(
                    $post->getDataCriacao(),
                    IntlDateFormatter::SHORT,
                    IntlDateFormatter::SHORT
                ); ?>
            </td>
            <td>
                <?php if ($post->getDataAtualizacao()) : ?>
                    <?= $this->dateFormat(
                        $post->getDataAtualizacao(),
                        IntlDateFormatter::SHORT,
                        IntlDateFormatter::SHORT
                    ); ?>
                <?php endif; ?>
            </td>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>
